<% content_for :title, "Lista de Regalos - #{@event.title}" %>

<div class="min-h-screen bg-gradient-to-br from-pink-50 via-purple-50 to-indigo-50 py-8">
  <!-- Floating Gift Elements -->
  <div class="fixed inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-10 left-10 text-4xl animate-bounce" style="animation-delay: 0s;">🎁</div>
    <div class="absolute top-20 right-20 text-3xl animate-bounce" style="animation-delay: 1s;">🎀</div>
    <div class="absolute top-40 left-1/4 text-2xl animate-bounce" style="animation-delay: 2s;">🎉</div>
    <div class="absolute top-60 right-1/3 text-3xl animate-bounce" style="animation-delay: 3s;">🎊</div>
    <div class="absolute bottom-20 left-16 text-4xl animate-bounce" style="animation-delay: 4s;">💝</div>
    <div class="absolute bottom-40 right-12 text-2xl animate-bounce" style="animation-delay: 0.5s;">🎈</div>
  </div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Header -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center gap-3 mb-4">
        <div class="inline-block p-4 bg-white rounded-full shadow-lg border-4 border-pink-200">
          <div class="text-4xl">🎁</div>
        </div>
        <div class="inline-block p-4 bg-white rounded-full shadow-lg border-4 border-purple-200">
          <div class="text-4xl">💝</div>
        </div>
        <div class="inline-block p-4 bg-white rounded-full shadow-lg border-4 border-pink-200">
          <div class="text-4xl">🎀</div>
        </div>
      </div>
      <h1 class="text-4xl sm:text-5xl font-bold mb-3 bg-gradient-to-r from-pink-600 via-purple-600 to-indigo-600 bg-clip-text text-transparent">
        Lista de Regalos 🎁
      </h1>
      <p class="text-xl text-gray-600 mb-2">
        Para: <span class="font-semibold text-purple-700"><%= @event.title %></span>
      </p>
      <p class="text-base text-gray-500">
        ¡Evitemos regalos duplicados! Registra aquí lo que vas a regalar ✨
      </p>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-1 gap-6 mb-8">
      <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-6 shadow-lg border border-pink-100 text-center">
        <div class="flex items-center justify-center">
          <div class="p-3 bg-pink-100 rounded-full">
            <span class="text-2xl">🎁</span>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Total de Regalos</p>
            <p class="text-3xl font-bold text-pink-600"><%= @gifts.count %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Botón para compartir lista pública -->
    <div class="text-center mb-8">
      <button 
        onclick="shareGiftsList()"
        class="inline-flex items-center gap-3 px-6 py-3 bg-gradient-to-r from-blue-500 to-purple-600 text-white font-semibold rounded-xl hover:from-blue-600 hover:to-purple-700 transition-all duration-200 transform hover:scale-105 shadow-lg">
        <span class="text-xl">🔗</span>
        <span>Compartir Lista Pública</span>
        <span class="text-xl">📱</span>
      </button>
      <p class="text-sm text-gray-600 mt-2">
        Comparte este enlace para que los invitados registren sus regalos
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Form to Add New Gift -->
      <div class="lg:col-span-1">
        <div class="bg-white/90 backdrop-blur-sm rounded-3xl shadow-xl p-6 border border-pink-200 sticky top-8">
          <div class="text-center mb-6">
            <div class="text-3xl mb-2">💝</div>
            <h2 class="text-2xl font-bold text-gray-800 mb-2">Registrar Regalo</h2>
            <p class="text-sm text-gray-600">¡Comparte qué vas a regalar para evitar duplicados!</p>
          </div>

          <%= form_with model: [@event, @new_gift], 
                        local: true, 
                        class: "space-y-4",
                        data: { controller: "gift-form" } do |form| %>
            
            <div>
              <%= form.label :name, "Nombre del Regalo", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.text_field :name, 
                                  placeholder: "Ej: Set de vajilla, Lámpara de mesa...",
                                  class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-pink-500 focus:border-pink-500 transition-colors",
                                  required: true %>
              <% if @new_gift.errors[:name].any? %>
                <p class="text-red-500 text-xs mt-1"><%= @new_gift.errors[:name].first %></p>
              <% end %>
            </div>

            <div>
              <%= form.label :description, "Descripción (Opcional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.text_area :description, 
                                 placeholder: "Detalles adicionales del regalo...",
                                 rows: 3,
                                 class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-pink-500 focus:border-pink-500 transition-colors resize-none" %>
              <% if @new_gift.errors[:description].any? %>
                <p class="text-red-500 text-xs mt-1"><%= @new_gift.errors[:description].first %></p>
              <% end %>
            </div>

            <%= form.submit "Registrar Regalo 🎁", 
                           class: "w-full bg-gradient-to-r from-pink-500 to-purple-600 text-white font-semibold py-3 px-6 rounded-xl hover:from-pink-600 hover:to-purple-700 transition-all duration-200 transform hover:scale-105 shadow-lg" %>
          <% end %>

          <div class="mt-6 p-4 bg-yellow-50 border border-yellow-200 rounded-xl">
            <div class="flex items-start">
              <span class="text-yellow-600 text-xl mr-2">💡</span>
              <div>
                <h3 class="text-sm font-medium text-yellow-800">Consejo</h3>
                <p class="text-xs text-yellow-700 mt-1">
                  Una vez registrado, no podrás editar ni eliminar el regalo. ¡Asegúrate de que esté correcto! Si necesitas hacer cambios, contacta al organizador del evento.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Gifts List -->
      <div class="lg:col-span-2">
        <div class="bg-white/90 backdrop-blur-sm rounded-3xl shadow-xl p-6 border border-purple-200">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold text-gray-800">
              Regalos Registrados
              <span class="text-lg text-purple-600 ml-2">(<%= @gifts.count %>)</span>
            </h2>
            <div class="text-3xl">🎀</div>
          </div>

          <% if @gifts.any? %>
            <div class="space-y-4">
              <% @gifts.each_with_index do |gift, index| %>
                <div class="bg-gradient-to-r from-pink-50 to-purple-50 rounded-2xl p-5 border border-pink-100 hover:shadow-lg transition-all duration-200">
                  <div class="flex items-start justify-between">
                    <div class="flex-1">
                      <div class="flex items-start gap-3">
                        <div class="text-2xl mt-1">🎁</div>
                        <div class="flex-1">
                          <h3 class="text-lg font-semibold text-gray-800 mb-1">
                            <%= gift.name %>
                          </h3>
                          <% if gift.description.present? %>
                            <p class="text-sm text-gray-600 bg-white/50 rounded-lg p-3 border border-pink-100 mt-2">
                              <%= gift.description %>
                            </p>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-12">
              <div class="text-6xl mb-4">🎁</div>
              <h3 class="text-xl font-semibold text-gray-600 mb-2">¡Aún no hay regalos registrados!</h3>
              <p class="text-gray-500">Sé el primero en registrar un regalo para este evento especial</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Back to Event Button -->
    <div class="text-center mt-8">
      <%= link_to @event, class: "inline-flex items-center px-6 py-3 bg-white/80 backdrop-blur-sm text-gray-700 font-medium rounded-xl hover:bg-white transition-all duration-200 shadow-lg border border-gray-200" do %>
        <span class="mr-2">←</span>
        Volver al Evento
      <% end %>
    </div>
  </div>
</div>

<script>
function shareGiftsList() {
  const publicUrl = '<%= public_gifts_url(@event.hash_id) %>';
  const shareText = '<%= share_gifts_text(@event).html_safe %>';
  
  // Intentar usar la API de compartir nativa si está disponible
  if (navigator.share) {
    navigator.share({
      title: 'Lista de Regalos - <%= @event.title %>',
      text: '🎁 Lista de Regalos para <%= @event.title %> - ¡Registra tu regalo para evitar duplicados!',
      url: publicUrl
    }).catch(console.error);
  } else {
    // Fallback: copiar al portapapeles
    navigator.clipboard.writeText(shareText).then(function() {
      showNotification('📋 Enlace copiado al portapapeles', 'success');
    }).catch(function(err) {
      // Fallback para navegadores más antiguos
      fallbackCopyToClipboard(shareText);
      showNotification('📋 Enlace copiado al portapapeles', 'success');
    });
  }
}

function fallbackCopyToClipboard(text) {
  const textArea = document.createElement('textarea');
  textArea.value = text;
  textArea.style.position = 'fixed';
  textArea.style.left = '-999999px';
  document.body.appendChild(textArea);
  textArea.select();
  document.execCommand('copy');
  document.body.removeChild(textArea);
}

function showNotification(message, type = 'success') {
  const notification = document.createElement('div');
  
  const bgColor = type === 'success' ? '#10b981' : '#ef4444';
  const borderColor = type === 'success' ? '#059669' : '#dc2626';
  
  notification.style.cssText = `
    position: fixed;
    top: 1rem;
    right: 1rem;
    background-color: ${bgColor};
    color: white;
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    z-index: 9999;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    max-width: 20rem;
    font-size: 0.875rem;
    border: 2px solid ${borderColor};
  `;
  
  const icon = type === 'success' ? '✅' : '❌';
  notification.innerHTML = `
    <span style="font-size: 1.125rem;">${icon}</span>
    <span>${message}</span>
  `;
  
  document.body.appendChild(notification);
  
  setTimeout(() => {
    notification.remove();
  }, 4000);
}
</script>