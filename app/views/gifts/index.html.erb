<% content_for :title, "#{t('gifts.title')} - #{@event.title}" %>
<%
  # Obtener el tema del evento
  theme = @event.current_theme
  gifts_icon = theme&.gifts_icon || "üéÅ"
  header_emojis = theme&.header_emoji&.split(',')&.map(&:strip) || ["üéÅ", "üíù", "üéÄ"]
%>

<div class="min-h-screen py-8" 
     style="background: <%= theme&.safe_background_gradient %>; <%= theme&.generate_css_variables&.map { |k, v| "#{k}: #{v};" }&.join(' ') %>">
  
  <!-- Floating elements from theme -->
  <% if theme&.floating_elements_array&.any? %>
    <% theme.floating_elements_array.each do |element| %>
      <div class="floating-element" style="<%= element['top'] ? "top: #{element['top']};" : '' %><%= element['left'] ? "left: #{element['left']};" : '' %><%= element['right'] ? "right: #{element['right']};" : '' %><%= element['size'] ? "font-size: #{element['size']};" : '' %>"><%= element['emoji'] %></div>
    <% end %>
  <% end %>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Header -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center gap-3 mb-4">
        <% header_emojis.take(3).each_with_index do |emoji, index| %>
          <div class="inline-block p-4 rounded-full shadow-lg border-4" 
               style="background: <%= theme&.card_background %>; border-color: <%= index.even? ? theme&.primary_color : theme&.secondary_color %>;">
            <div class="text-4xl"><%= emoji %></div>
          </div>
        <% end %>
      </div>
      <h1 class="text-4xl sm:text-5xl font-bold mb-3" 
          style="color: <%= theme&.background_text_color %>;">
        <%= t('gifts.title') %> <%= gifts_icon %>
      </h1>
      <p class="text-xl mb-2" style="color: <%= theme&.background_text_color %>;">
        <%= t('gifts.for_event') %> <span class="font-semibold" style="color: <%= theme&.primary_color %>;"><%= @event.title %></span>
      </p>
      <p class="text-base" style="color: <%= theme&.background_text_color %>;">
        <%= t('gifts.avoid_duplicates') %>
      </p>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-1 gap-6 mb-8">
      <div class="rounded-2xl p-6 shadow-lg border text-center" 
           style="background: <%= theme&.card_background %>; border-color: <%= theme&.primary_color %>;">
        <div class="flex items-center justify-center">
          <div class="p-3 rounded-full" style="background: linear-gradient(135deg, <%= theme&.primary_color %>20 0%, <%= theme&.secondary_color %>20 100%);">
            <span class="text-2xl"><%= gifts_icon %></span>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium" style="color: <%= theme&.background_text_color %>;"><%= t('gifts.total_gifts') %></p>
            <p class="text-3xl font-bold" style="color: <%= theme&.primary_color %>;"><%= @gifts.count %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Bot√≥n para compartir lista p√∫blica -->
    <div class="text-center mb-8">
      <button 
        onclick="shareGiftsList()"
        class="inline-flex items-center gap-3 px-6 py-3 font-semibold rounded-xl transition-all duration-200 transform hover:scale-105 shadow-lg"
        style="background: linear-gradient(135deg, <%= theme&.primary_color %> 0%, <%= theme&.secondary_color %> 100%); color: <%= theme&.text_color %>;">
        <span class="text-xl">üîó</span>
        <span><%= t('gifts.share_public_list') %></span>
        <span class="text-xl">üì±</span>
      </button>
      <p class="text-sm mt-2" style="color: <%= theme&.background_text_color %>;">
        <%= t('gifts.share_description') %>
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Form to Add New Gift -->
      <div class="lg:col-span-1">
        <div class="rounded-2xl shadow-xl p-6 border sticky top-8" 
             style="background: <%= theme&.card_background %>; border-color: <%= theme&.primary_color %>;">
          <div class="text-center mb-6">
            <div class="text-3xl mb-2">üíù</div>
            <h2 class="text-2xl font-bold mb-2" style="color: <%= theme&.background_text_color %>;"><%= t('gifts.register_gift') %></h2>
            <p class="text-sm" style="color: <%= theme&.background_text_color %>;"><%= t('gifts.share_what_you_give') %></p>
          </div>

          <%= form_with model: [@event, @new_gift], 
                        local: true, 
                        class: "space-y-4",
                        data: { controller: "gift-form" } do |form| %>
            
            <div>
              <%= form.label :name, t('gifts.gift_name'), class: "block text-sm font-medium mb-1", style: "color: #{theme&.background_text_color};" %>
              <%= form.text_field :name, 
                                  placeholder: t('gifts.gift_name_placeholder'),
                                  class: "w-full px-4 py-3 border rounded-xl transition-colors",
                                  style: "border-color: #{theme&.secondary_color}; focus:ring-color: #{theme&.primary_color}; focus:border-color: #{theme&.primary_color};",
                                  required: true %>
              <% if @new_gift.errors[:name].any? %>
                <p class="text-red-500 text-xs mt-1"><%= @new_gift.errors[:name].first %></p>
              <% end %>
            </div>

            <%= form.submit "#{gifts_icon} #{t('gifts.register_button')}", 
                           class: "w-full font-bold py-4 px-6 rounded-xl transition-all duration-200 transform hover:scale-105 shadow-xl text-lg border-2",
                           style: "background: linear-gradient(135deg, #{theme&.primary_color} 0%, #{theme&.secondary_color} 100%); color: #{theme&.text_color}; border-color: rgba(255,255,255,0.2);" %>
          <% end %>

          <div class="mt-6 p-4 rounded-xl border" style="background: rgba(255, 193, 7, 0.1); border-color: #ffc107;">
            <div class="flex items-start">
              <span class="text-yellow-600 text-xl mr-2">üí°</span>
              <div>
                <h3 class="text-sm font-medium text-yellow-800"><%= t('common.tip') %></h3>
                <p class="text-xs text-yellow-700 mt-1">
                  <%= t('gifts.cannot_edit_warning') %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Gifts List -->
      <div class="lg:col-span-2">
        <div class="rounded-2xl shadow-xl p-6 border" 
             style="background: <%= theme&.card_background %>; border-color: <%= theme&.secondary_color %>;">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold" style="color: <%= theme&.background_text_color %>;">
              <%= t('gifts.registered_gifts') %>
              <span class="text-lg ml-2" style="color: <%= theme&.primary_color %>;">(<%= @gifts.count %>)</span>
            </h2>
            <div class="text-3xl">üéÄ</div>
          </div>

          <% if @gifts.any? %>
            <div class="space-y-4">
              <% @gifts.each_with_index do |gift, index| %>
                <div class="rounded-2xl p-5 border hover:shadow-lg transition-all duration-200" 
                     style="background: linear-gradient(135deg, <%= theme&.primary_color %>10 0%, <%= theme&.secondary_color %>10 100%); border-color: <%= theme&.primary_color %>;">
                  <div class="flex items-start justify-between">
                    <div class="flex-1">
                      <div class="flex items-start gap-3">
                        <div class="text-2xl mt-1"><%= gifts_icon %></div>
                        <div class="flex-1">
                          <h3 class="text-lg font-semibold" style="color: <%= theme&.background_text_color %>;">
                            <%= gift.name %>
                          </h3>
                        </div>
                      </div>
                    </div>
                    
                    <!-- Botones de administraci√≥n -->
                    <div class="flex-shrink-0 ml-4">
                      <div class="flex items-center gap-2">
                        <%= link_to edit_event_gift_path(@event, gift), 
                            class: "px-3 py-2 rounded-lg transition-colors duration-200 flex items-center gap-1",
                            style: "background: rgba(59, 130, 246, 0.1); color: #1d4ed8;",
                            title: t('gifts.edit_gift') do %>
                          <span class="text-sm">‚úèÔ∏è</span>
                          <span class="text-xs font-medium"><%= t('common.edit') %></span>
                        <% end %>
                        
                        <%= button_to event_gift_path(@event, gift), 
                            method: :delete,
                            class: "px-3 py-2 rounded-lg transition-colors duration-200 flex items-center gap-1 border-none cursor-pointer text-xs font-medium",
                            style: "background: rgba(239, 68, 68, 0.1); color: #dc2626;",
                            title: t('gifts.delete_gift'),
                            data: { 
                              confirm: t('gifts.delete_confirm'),
                              controller: "confirm-delete"
                            } do %>
                          <span class="text-sm">üóëÔ∏è</span>
                          <span><%= t('common.delete') %></span>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-12">
              <div class="text-6xl mb-4"><%= gifts_icon %></div>
              <h3 class="text-xl font-semibold mb-2" style="color: <%= theme&.background_text_color %>;"><%= t('gifts.no_gifts_yet') %></h3>
              <p style="color: <%= theme&.background_text_color %>;"><%= t('gifts.be_first') %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Back to Event Button -->
    <div class="text-center mt-8">
      <%= link_to @event, class: "inline-flex items-center px-6 py-3 font-medium rounded-xl transition-all duration-200 shadow-lg border", style: "background: #{theme&.card_background}; color: #{theme&.background_text_color}; border-color: #{theme&.secondary_color};" do %>
        <span class="mr-2">‚Üê</span>
        <%= t('navigation.back_to_event') %>
      <% end %>
    </div>
  </div>
</div>

<script>
// Translations for JavaScript
const translations = <%= gifts_js_translations %>;

function shareGiftsList() {
  const publicUrl = '<%= public_gifts_url(@event.hash_id) %>';
  const shareText = '<%= share_gifts_text(@event).html_safe %>';
  
  // Intentar usar la API de compartir nativa si est√° disponible
  if (navigator.share) {
    navigator.share({
      title: translations.share_title,
      text: translations.share_text,
      url: publicUrl
    }).catch(console.error);
  } else {
    // Fallback: copiar al portapapeles
    navigator.clipboard.writeText(shareText).then(function() {
      showNotification(translations.link_copied, 'success');
    }).catch(function(err) {
      // Fallback para navegadores m√°s antiguos
      fallbackCopyToClipboard(shareText);
      showNotification(translations.link_copied, 'success');
    });
  }
}

function fallbackCopyToClipboard(text) {
  const textArea = document.createElement('textarea');
  textArea.value = text;
  textArea.style.position = 'fixed';
  textArea.style.left = '-999999px';
  document.body.appendChild(textArea);
  textArea.select();
  document.execCommand('copy');
  document.body.removeChild(textArea);
}

function showNotification(message, type = 'success') {
  const notification = document.createElement('div');
  
  const bgColor = type === 'success' ? '#10b981' : '#ef4444';
  const borderColor = type === 'success' ? '#059669' : '#dc2626';
  
  notification.style.cssText = `
    position: fixed;
    top: 1rem;
    right: 1rem;
    background-color: ${bgColor};
    color: white;
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    z-index: 9999;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    max-width: 20rem;
    font-size: 0.875rem;
    border: 2px solid ${borderColor};
  `;
  
  const icon = type === 'success' ? '‚úÖ' : '‚ùå';
  notification.innerHTML = `
    <span style="font-size: 1.125rem;">${icon}</span>
    <span>${message}</span>
  `;
  
  document.body.appendChild(notification);
  
  setTimeout(() => {
    notification.remove();
  }, 4000);
}
</script>