<div class="container mt-18">
  <div class="max-w-4xl mx-auto">
    <div class="flex items-center justify-between mb-6">
      <div class="flex items-center">
        <%= link_to events_path, class: "text-blue-600 hover:text-blue-800 mr-4" do %>
          <i class="nf nf-fa-arrow_left text-xl"></i>
        <% end %>
        <h1 class="font-bold text-4xl"><%= @event.title %></h1>
      </div>
      
      <div class="flex space-x-3">
        <%= link_to edit_event_path(@event), 
            class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200 flex items-center" do %>
          <i class="nf nf-fa-edit mr-2"></i>
          Edit
        <% end %>
        <%= button_to event_path(@event), method: :delete,
            class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors duration-200 font-medium flex items-center border-none cursor-pointer",
            data: { 
              confirm: "Are you sure you want to delete this event?",
              controller: "confirm-delete"
            } do %>
          <i class="nf nf-fa-trash mr-2"></i>
          Delete
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Event Details -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow-md p-8 mb-6">
          <h2 class="text-2xl font-semibold mb-6 flex items-center">
            <i class="nf nf-fa-info_circle mr-3 text-blue-600"></i>
            Event Details
          </h2>
          
          <div class="space-y-6">
            <% if @event.description.present? %>
              <div>
                <h3 class="font-semibold text-gray-700 mb-2 flex items-center">
                  <i class="nf nf-fa-align_left mr-2 text-gray-500"></i>
                  Description
                </h3>
                <p class="text-gray-600 leading-relaxed"><%= @event.description %></p>
              </div>
            <% end %>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <h3 class="font-semibold text-gray-700 mb-2 flex items-center">
                  <i class="nf nf-fa-calendar_days mr-2 text-gray-500"></i>
                  Start Time
                </h3>
                <p class="text-gray-600"><%= @event.start_time.strftime("%B %d, %Y at %I:%M %p") %></p>
              </div>

              <% if @event.end_time.present? %>
                <div>
                  <h3 class="font-semibold text-gray-700 mb-2 flex items-center">
                    <i class="nf nf-fa-calendar_check mr-2 text-gray-500"></i>
                    End Time
                  </h3>
                  <p class="text-gray-600"><%= @event.end_time.strftime("%B %d, %Y at %I:%M %p") %></p>
                </div>
              <% end %>
            </div>

            <% if @event.location.present? %>
              <div>
                <h3 class="font-semibold text-gray-700 mb-2 flex items-center">
                  <i class="nf nf-fa-location_dot mr-2 text-gray-500"></i>
                  Location
                </h3>
                <p class="text-gray-600"><%= @event.location %></p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Budget Management -->
        <div class="bg-white rounded-lg shadow-md p-8">
          <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-semibold flex items-center">
              <i class="nf nf-fa-dollar_sign mr-3 text-blue-600"></i>
              Presupuestos
            </h2>
            <%= link_to new_event_presupuesto_path(@event), 
                class: "px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors duration-200 flex items-center" do %>
              <i class="nf nf-fa-plus mr-2"></i>
              Nuevo Presupuesto
            <% end %>
          </div>

          <% if @event.presupuestos.any? %>
            <div class="space-y-4">
              <% @event.presupuestos.limit(3).each do |presupuesto| %>
                <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                  <div class="flex items-center justify-between mb-2">
                    <h3 class="font-semibold text-lg"><%= presupuesto.title %></h3>
                    <%= link_to event_presupuesto_path(@event, presupuesto), 
                        class: "text-blue-600 hover:text-blue-800" do %>
                      <i class="nf nf-fa-eye"></i>
                    <% end %>
                  </div>
                  <% if presupuesto.description.present? %>
                    <p class="text-gray-600 text-sm mb-3"><%= truncate(presupuesto.description, length: 100) %></p>
                  <% end %>
                  
                  <div class="grid grid-cols-2 gap-4">
                    <!-- Solo confirmados -->
                    <div class="bg-green-50 p-3 rounded-lg">
                      <div class="text-xs text-green-700 font-medium mb-1 flex items-center">
                        <i class="nf nf-fa-check-circle mr-1"></i>
                        Solo Confirmados
                      </div>
                      <div class="text-sm font-bold text-green-800">
                        <%= humanized_money_with_symbol(presupuesto.total_para_evento) %>
                      </div>
                      <div class="text-xs text-green-600">
                        <%= humanized_money_with_symbol(presupuesto.costo_por_persona) %> por persona
                      </div>
                      <div class="text-xs text-green-600">
                        <%= @event.invitations.where(status: 'accepted').count %> personas
                      </div>
                    </div>
                    
                    <!-- Todos los invitados -->
                    <div class="bg-blue-50 p-3 rounded-lg">
                      <div class="text-xs text-blue-700 font-medium mb-1 flex items-center">
                        <i class="nf nf-fa-users mr-1"></i>
                        Todos los Invitados
                      </div>
                      <div class="text-sm font-bold text-blue-800">
                        <%= humanized_money_with_symbol(presupuesto.total_para_evento_todos) %>
                      </div>
                      <div class="text-xs text-blue-600">
                        <%= humanized_money_with_symbol(presupuesto.costo_por_persona_todos) %> por persona
                      </div>
                      <div class="text-xs text-blue-600">
                        <%= @event.invitations.where(status: ['accepted', 'pending']).count %> personas
                      </div>
                    </div>
                  </div>
                  
                  <div class="mt-2 text-xs text-gray-500 flex items-center">
                    <i class="nf nf-fa-list mr-1"></i>
                    <%= presupuesto.lineas.count %> líneas
                  </div>
                </div>
              <% end %>
              
              <% if @event.presupuestos.count > 3 %>
                <div class="text-center">
                  <%= link_to event_presupuestos_path(@event), 
                      class: "text-blue-600 hover:text-blue-800 text-sm" do %>
                    Ver todos los presupuestos (<%= @event.presupuestos.count %>)
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <i class="nf nf-fa-calculator text-gray-300 text-4xl mb-4"></i>
              <p class="text-gray-500 mb-4">No hay presupuestos creados aún</p>
              <%= link_to new_event_presupuesto_path(@event), 
                  class: "inline-flex items-center px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700" do %>
                <i class="nf nf-fa-plus mr-2"></i>
                Crear Presupuesto
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Event Stats -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow-md p-6 sticky top-6">
          <h2 class="text-xl font-semibold mb-6 flex items-center">
            <i class="nf nf-fa-chart_bar mr-3 text-blue-600"></i>
            Event Statistics
          </h2>
          
          <div class="space-y-4">
            <div class="flex items-center justify-between p-4 bg-blue-50 rounded-lg">
              <div class="flex items-center">
                <i class="nf nf-fa-users text-blue-600 mr-3"></i>
                <span class="font-medium">Total Invites</span>
              </div>
              <span class="text-2xl font-bold text-blue-600"><%= @event.invitations.count %></span>
            </div>

            <div class="flex items-center justify-between p-4 bg-green-50 rounded-lg">
              <div class="flex items-center">
                <i class="nf nf-fa-check text-green-600 mr-3"></i>
                <span class="font-medium">Confirmed</span>
              </div>
              <span class="text-2xl font-bold text-green-600"><%= @event.invitations.accepted.count %></span>
            </div>

            <div class="flex items-center justify-between p-4 bg-red-50 rounded-lg">
              <div class="flex items-center">
                <i class="nf nf-fa-times text-red-600 mr-3"></i>
                <span class="font-medium">Declined</span>
              </div>
              <span class="text-2xl font-bold text-red-600"><%= @event.invitations.declined.count %></span>
            </div>

            <div class="flex items-center justify-between p-4 bg-yellow-50 rounded-lg">
              <div class="flex items-center">
                <i class="nf nf-fa-clock text-yellow-600 mr-3"></i>
                <span class="font-medium">Pending</span>
              </div>
              <span class="text-2xl font-bold text-yellow-600"><%= @event.invitations.pending.count %></span>
            </div>
          </div>

          <!-- Quick Actions -->
          <div class="mt-6 pt-6 border-t border-gray-200">
            <div class="space-y-3">
              <%= link_to invitations_index_path(event_id: @event.id), 
                  class: "w-full px-4 py-2 text-center bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors duration-200 flex items-center justify-center" do %>
                <i class="nf nf-fa-envelope mr-2"></i>
                View All Invitations
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
