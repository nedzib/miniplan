<div class="container mt-18">
  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Events</h1>
    <%= link_to new_event_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition-colors duration-200 flex items-center" do %>
      <i class="nf nf-fa-plus mr-2"></i>
      New Event
    <% end %>
  </div>

  <% if @events.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
      <% @events.each do |event| %>
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-200 relative">
          <!-- Event Actions -->
          <div class="absolute top-4 right-4 flex space-x-2">
            <%= link_to edit_event_path(event), class: "text-blue-600 hover:text-blue-800 transition-colors duration-200" do %>
              <i class="nf nf-fa-edit text-lg"></i>
            <% end %>
            <%= button_to event_path(event), method: :delete, 
                class: "text-red-600 hover:text-red-800 transition-colors duration-200 bg-transparent border-none p-0 cursor-pointer",
                data: { 
                  confirm: "Are you sure you want to delete this event?",
                  controller: "confirm-delete"
                } do %>
              <i class="nf nf-fa-trash text-lg"></i>
            <% end %>
          </div>

          <!-- Event Content -->
          <%= link_to event_path(event), class: "block pr-16" do %>
            <h2 class="text-xl font-semibold mb-2"><%= event.title %></h2>
            <p class="text-gray-600 mb-4"><%= event.description %></p>
            <div class="flex items-center mb-2">
              <i class="nf nf-fa-calendar text-gray-500 mr-2 text-lg"></i>
              <span class="text-gray-700"><%= event.start_time.strftime("%B %d, %Y at %I:%M %p") %></span>
            </div>
            <div class="flex items-center mb-2">
              <i class="nf nf-fa-location_dot text-gray-500 mr-2 text-lg"></i>
              <span class="text-gray-700"><%= event.location %></span>
            </div>
            <div class="flex items-center mb-2">
              <i class="nf nf-fa-users text-gray-500 mr-2 text-lg"></i>
              <span class="text-gray-700"><%= event.invitations.count %>
                participants</span>
            </div>
            <div class="flex items-center">
              <i class="nf nf-fa-check text-gray-500 mr-2 text-lg"></i>
              <span class="text-gray-700"><%= event.invitations.accepted.count %>
                confirmed</span>
            </div>
          <% end %>
          
          <!-- View Invitations Button -->
          <%= link_to invitations_index_path(event_id: event.id), 
              class: "mt-4 inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors duration-200" do %>
            <i class="nf nf-fa-envelope mr-2"></i>
            View Invitations
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <i class="nf nf-fa-calendar text-gray-300 text-6xl mb-4"></i>
      <h3 class="text-xl font-semibold text-gray-600 mb-2">No events yet</h3>
      <p class="text-gray-500 mb-6">Create your first event to get started</p>
      <%= link_to new_event_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition-colors duration-200 inline-flex items-center" do %>
        <i class="nf nf-fa-plus mr-2"></i>
        Create Event
      <% end %>
    </div>
  <% end %>
</div>
