<div class="container mt-18">
  <div class="max-w-2xl mx-auto">
    <div class="flex items-center mb-6">
      <%= link_to events_path, class: "text-blue-600 hover:text-blue-800 mr-4" do %>
        <i class="nf nf-fa-arrow_left text-xl"></i>
      <% end %>
      <h1 class="font-bold text-4xl">Create New Event</h1>
    </div>

    <div class="bg-white rounded-lg shadow-md p-8">
      <%= form_with model: @event, local: true, data: { controller: "event-form" }, class: "space-y-6" do |form| %>
        <% if @event.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex items-center mb-2">
              <i class="nf nf-fa-exclamation_triangle text-red-600 mr-2"></i>
              <h4 class="font-semibold text-red-800">Please fix the following errors:</h4>
            </div>
            <ul class="list-disc list-inside text-red-700">
              <% @event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" do %>
            <i class="nf nf-fa-heading mr-2"></i>Title
          <% end %>
          <%= form.text_field :title, 
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
              placeholder: "Enter event title" %>
        </div>

        <div>
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" do %>
            <i class="nf nf-fa-align_left mr-2"></i>Description
          <% end %>
          <%= form.text_area :description, 
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
              placeholder: "Describe your event",
              rows: 4 %>
        </div>

        <div>
          <%= form.label :location, class: "block text-sm font-medium text-gray-700 mb-2" do %>
            <i class="nf nf-fa-location_dot mr-2"></i>Location
          <% end %>
          <%= form.text_field :location, 
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
              placeholder: "Event location" %>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :start_time, class: "block text-sm font-medium text-gray-700 mb-2" do %>
              <i class="nf nf-fa-calendar_days mr-2"></i>Start Date & Time
            <% end %>
            <%= form.datetime_local_field :start_time, 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
                data: { 
                  event_form_target: "startTime",
                  action: "change->event-form#updateEndTime"
                } %>
          </div>

          <div>
            <%= form.label :end_time, class: "block text-sm font-medium text-gray-700 mb-2" do %>
              <i class="nf nf-fa-calendar_check mr-2"></i>End Date & Time
            <% end %>
            <%= form.datetime_local_field :end_time, 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
                data: { event_form_target: "endTime" } %>
          </div>
        </div>

        <div class="flex justify-end space-x-4 pt-6">
          <%= link_to events_path, 
              class: "px-6 py-3 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors duration-200 font-medium" do %>
            Cancel
          <% end %>
          <%= form.submit "Create Event", 
              class: "px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200 font-medium flex items-center",
              data: { event_form_target: "submitButton" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
