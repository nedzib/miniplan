<div class="container mt-18">
  <h1 class="font-bold text-4xl flex flex-row items-center mb-6">
    <%= link_to event_path(@event), class: "flex items-center text-blue-600 hover:text-blue-800" do %>
      <i class="nf nf-fa-arrow_left mr-2 text-xl self-center"></i>
    <% end %>
    Nuevo Presupuesto para <%= @event.title %>
  </h1>

  <div class="max-w-md mx-auto">
    <%= form_with(model: [@event, @presupuesto], local: true, class: "space-y-6") do |f| %>
      <% if @presupuesto.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
          <ul class="list-disc list-inside">
            <% @presupuesto.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :title, "Título", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :title,
                     class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
                     placeholder: "Ej. Presupuesto de Comida" %>
      </div>

      <div>
        <%= f.label :description, "Descripción", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :description,
                    rows: 4,
                    class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
                    placeholder: "Descripción opcional del presupuesto..." %>
      </div>

      <div class="flex space-x-3">
        <%= f.submit "Crear Presupuesto",
                 class: "flex-1 rounded-md border border-transparent bg-purple-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2" %>
        <%= link_to "Cancelar", event_path(@event),
                class: "flex-1 text-center rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2" %>
      </div>
    <% end %>
  </div>
</div>
