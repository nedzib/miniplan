<div class="container mt-18">
  <h1 class="font-bold text-4xl flex flex-row items-center mb-6">
    <%= link_to event_path(@event), class: "flex items-center text-blue-600 hover:text-blue-800" do %>
      <i class="nf nf-fa-arrow_left mr-2 text-xl self-center"></i>
    <% end %>
    <%= @presupuesto.title %>
  </h1>

  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
      <%= notice %>
    </div>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Información del presupuesto -->
    <div class="lg:col-span-2">
      <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h2 class="text-xl font-semibold mb-4">Descripción</h2>
        <p class="text-gray-700"><%= @presupuesto.description.present? ? @presupuesto.description : "Sin descripción" %></p>
      </div>

      <!-- Lista de líneas -->
      <div class="bg-white shadow rounded-lg p-6">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-semibold">Líneas del Presupuesto</h2>
          <%= link_to "Agregar Línea", new_event_presupuesto_linea_path(@event, @presupuesto), 
                      class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
        </div>

        <% if @lineas.any? %>
          <div class="overflow-x-auto">
            <table class="w-full text-sm text-left text-gray-500">
              <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                <tr>
                  <th scope="col" class="px-6 py-3">Concepto</th>
                  <th scope="col" class="px-6 py-3">Valor</th>
                  <th scope="col" class="px-6 py-3">Tipo</th>
                  <th scope="col" class="px-6 py-3">Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% @lineas.each do |linea| %>
                  <tr class="bg-white border-b hover:bg-gray-50">
                    <td class="px-6 py-4 font-medium text-gray-900"><%= linea.concepto %></td>
                    <td class="px-6 py-4"><%= humanized_money_with_symbol(linea.valor) %></td>
                    <td class="px-6 py-4">
                      <% if linea.por_persona %>
                        <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded">Por persona</span>
                      <% else %>
                        <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded">General</span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 flex space-x-2">
                      <%= link_to edit_event_presupuesto_linea_path(@event, @presupuesto, linea), 
                                  class: "font-medium text-blue-600 hover:underline" do %>
                        <i class="nf nf-fa-edit"></i>
                      <% end %>
                      <%= button_to event_presupuesto_linea_path(@event, @presupuesto, linea),
                                    method: :delete,
                                    class: "font-medium text-red-600 hover:underline",
                                    form: { data: { turbo_confirm: "¿Estás seguro?" } } do %>
                        <i class="nf nf-fa-trash"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <p class="text-gray-500 text-center py-8">No hay líneas en este presupuesto aún.</p>
        <% end %>
      </div>
    </div>

    <!-- Resumen del presupuesto -->
    <div class="bg-white shadow rounded-lg p-6 h-fit">
      <h2 class="text-xl font-semibold mb-4">Resumen del Presupuesto</h2>
      
      <!-- Totales base -->
      <div class="space-y-3 mb-6">
        <div class="flex justify-between">
          <span class="text-gray-600">Total General:</span>
          <span class="font-medium"><%= humanized_money_with_symbol(@presupuesto.total_general) %></span>
        </div>
        
        <div class="flex justify-between">
          <span class="text-gray-600">Total Por Persona:</span>
          <span class="font-medium"><%= humanized_money_with_symbol(@presupuesto.total_por_persona) %></span>
        </div>
      </div>
      
      <hr class="my-4">
      
      <!-- Escenario 1: Solo confirmados -->
      <div class="bg-green-50 p-4 rounded-lg mb-4">
        <h3 class="font-semibold text-green-800 mb-3 flex items-center">
          <i class="nf nf-fa-check-circle mr-2"></i>
          Solo Invitados Confirmados
        </h3>
        
        <div class="space-y-2">
          <div class="flex justify-between text-sm">
            <span class="text-green-700">Invitados Confirmados:</span>
            <span class="font-medium text-green-800"><%= @event.invitations.where(status: 'accepted').count %></span>
          </div>
          
          <div class="flex justify-between text-lg font-semibold">
            <span class="text-green-700">Total del Evento:</span>
            <span class="text-green-800 ml-3"><%= humanized_money_with_symbol(@presupuesto.total_para_evento) %></span>
          </div>
          
          <div class="flex justify-between">
            <span class="text-green-700">Costo por Persona:</span>
            <span class="font-semibold text-green-800 ml-3"><%= humanized_money_with_symbol(@presupuesto.costo_por_persona) %></span>
          </div>
        </div>
      </div>

      <!-- Escenario 2: Todos los invitados -->
      <div class="bg-blue-50 p-4 rounded-lg mb-6">
        <h3 class="font-semibold text-blue-800 mb-3 flex items-center">
          <i class="nf nf-fa-users mr-2"></i>
          Todos los Invitados
        </h3>
        
        <div class="space-y-2">
          <div class="flex justify-between text-sm">
            <span class="text-blue-700">Total Invitados:</span>
            <span class="font-medium text-blue-800"><%= @event.invitations.where(status: ['accepted', 'pending']).count %></span>
          </div>
          
          <div class="flex justify-between text-sm">
            <span class="text-blue-700">Confirmados:</span>
            <span class="text-blue-800"><%= @event.invitations.where(status: 'accepted').count %></span>
          </div>
          
          <div class="flex justify-between text-sm">
            <span class="text-blue-700">Pendientes:</span>
            <span class="text-blue-800"><%= @event.invitations.where(status: 'pending').count %></span>
          </div>
          
          <div class="flex justify-between text-lg font-semibold">
            <span class="text-blue-700">Total del Evento:</span>
            <span class="text-blue-800 ml-3"><%= humanized_money_with_symbol(@presupuesto.total_para_evento_todos) %></span>
          </div>
          
          <div class="flex justify-between">
            <span class="text-blue-700">Costo por Persona:</span>
            <span class="font-semibold text-blue-800 ml-3"><%= humanized_money_with_symbol(@presupuesto.costo_por_persona_todos) %></span>
          </div>
        </div>
      </div>

      <div class="mt-6 space-y-2">
        <%= link_to "Editar Presupuesto", edit_event_presupuesto_path(@event, @presupuesto), 
                    class: "w-full bg-yellow-600 text-white px-4 py-2 rounded hover:bg-yellow-700 block text-center" %>
        <%= button_to "Eliminar Presupuesto", event_presupuesto_path(@event, @presupuesto),
                      method: :delete,
                      class: "w-full bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700",
                      form: { data: { turbo_confirm: "¿Estás seguro de que quieres eliminar este presupuesto?" } } %>
      </div>
    </div>
  </div>
</div>
