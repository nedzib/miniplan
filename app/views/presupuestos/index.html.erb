<div class="container mt-18">
  <h1 class="font-bold text-4xl flex flex-row items-center mb-6">
    <%= link_to event_path(@event), class: "flex items-center text-blue-600 hover:text-blue-800" do %>
      <i class="nf nf-fa-arrow_left mr-2 text-xl self-center"></i>
    <% end %>
    Presupuestos de <%= @event.title %>
  </h1>

  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
      <%= notice %>
    </div>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <p class="text-gray-600">
      Total de presupuestos: <%= @presupuestos.count %>
    </p>
    <%= link_to "Nuevo Presupuesto", new_event_presupuesto_path(@event), 
        class: "bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700" %>
  </div>

  <% if @presupuestos.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @presupuestos.each do |presupuesto| %>
        <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:shadow-lg transition-shadow">
          <div class="flex justify-between items-start mb-4">
            <h3 class="text-xl font-semibold text-gray-900"><%= presupuesto.title %></h3>
            <div class="flex space-x-2">
              <%= link_to event_presupuesto_path(@event, presupuesto), 
                  class: "text-blue-600 hover:text-blue-800" do %>
                <i class="nf nf-fa-eye"></i>
              <% end %>
              <%= link_to edit_event_presupuesto_path(@event, presupuesto), 
                  class: "text-yellow-600 hover:text-yellow-800" do %>
                <i class="nf nf-fa-edit"></i>
              <% end %>
            </div>
          </div>
          
          <% if presupuesto.description.present? %>
            <p class="text-gray-600 text-sm mb-4"><%= truncate(presupuesto.description, length: 100) %></p>
          <% end %>
          
          <div class="space-y-2 mb-4">
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Líneas:</span>
              <span class="font-medium"><%= presupuesto.lineas.count %></span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Total general:</span>
              <span class="font-medium"><%= humanized_money_with_symbol(presupuesto.total_general) %></span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Por persona:</span>
              <span class="font-medium"><%= humanized_money_with_symbol(presupuesto.total_por_persona) %></span>
            </div>
          </div>
          
          <div class="border-t pt-4">
            <div class="flex justify-between items-center">
              <div>
                <div class="text-lg font-bold text-green-600">
                  <%= humanized_money_with_symbol(presupuesto.total_para_evento) %>
                </div>
                <div class="text-xs text-gray-500">Total del evento</div>
              </div>
              <div class="text-right">
                <div class="text-sm font-semibold text-blue-600">
                  <%= humanized_money_with_symbol(presupuesto.costo_por_persona) %>
                </div>
                <div class="text-xs text-gray-500">Por persona</div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <i class="nf nf-fa-calculator text-gray-300 text-6xl mb-4"></i>
      <h3 class="text-xl font-medium text-gray-900 mb-2">No hay presupuestos</h3>
      <p class="text-gray-600 mb-6">Aún no has creado ningún presupuesto para este evento.</p>
      <%= link_to new_event_presupuesto_path(@event), 
          class: "inline-flex items-center px-6 py-3 bg-purple-600 text-white rounded-lg hover:bg-purple-700" do %>
        <i class="nf nf-fa-plus mr-2"></i>
        Crear Presupuesto
      <% end %>
    </div>
  <% end %>
</div>
