<% content_for :title, "#{@event.title} - Invitación para #{@invitation.name}" %>
<% content_for :description, "#{@invitation.name}, estás invitado(a) a #{@event.title}. #{@event.description.present? ? @event.description : 'Te esperamos en este evento especial.'}" %>
<% content_for :og_title, "🐝 #{@event.title} - Invitación Especial" %>
<% content_for :og_description, "#{@invitation.name}, tienes una invitación especial para #{@event.title}. #{@event.start_time ? "📅 #{format_date_spanish(@event.start_time)}" : ""} #{@event.location.present? ? "📍 #{@event.location}" : ""}" %>
<% content_for :og_image_alt, "Invitación para #{@event.title} - #{@invitation.name}" %>
<% content_for :og_url, rsvp_confirm_url(hash_id: @invitation.hash_id) %>

<%
  # Verificar si hay familiares pendientes
  has_pending_family_members = @invitation.family_group && 
                               @family_members.any? { |member| member.status == 'pending' }
  
  # Mostrar countdown si:
  # 1. Hay deadline y no ha pasado, Y
  # 2. (La invitación no está aceptada O hay familiares pendientes)
  show_countdown = @event.rsvp_deadline && 
                   !rsvp_deadline_passed?(@event) && 
                   (@invitation.status != 'accepted' || has_pending_family_members)
%>

<div class="py-6 w-full bee-background" data-controller="rsvp" data-rsvp-hash-id-value="<%= @invitation.hash_id %>" <% if show_countdown %>data-countdown-target="<%= @event.rsvp_deadline.to_i * 1000 %>"<% end %>>
  <!-- Floating bees and flowers for ambiance -->
  <div class="floating-bee">🐝</div>
  <div class="floating-bee">🌸</div>
  <div class="floating-bee">🐝</div>
  <div class="floating-bee">🐝</div>
  <div class="floating-bee">🌸</div>
  
  <div class="w-full max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Countdown Section -->
    <% if show_countdown %>
      <div class="text-center mb-3 animate-fade-in">
        <div class="inline-block text-white px-3 py-2 rounded-lg shadow-sm" style="background-color: #f97316; border: 1px solid #ea580c;">
          <div class="flex items-center justify-center space-x-2">
            <div class="text-center">
              <% if @invitation.status == 'accepted' && has_pending_family_members %>
                <p class="text-xs font-medium">Confirma a tus familiares hasta:</p>
              <% else %>
                <p class="text-xs font-medium">Confirmaciones hasta:</p>
              <% end %>
              <p class="text-xs font-bold"><%= l(@event.rsvp_deadline, format: :short) %></p>
              <div id="countdown-timer" class="text-sm font-bold" data-deadline="<%= @event.rsvp_deadline.to_i * 1000 %>">
                <!-- El countdown se actualizará con JavaScript -->
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Mensaje si el deadline ha pasado -->
    <% if @event.rsvp_deadline && rsvp_deadline_passed?(@event) %>
      <div class="text-center mb-6 sm:mb-8 animate-fade-in">
        <div class="bee-card mb-4" style="background: linear-gradient(135deg, #FF6B6B 0%, #DC143C 100%); border: 3px solid #B22222;">
          <div class="p-4 sm:p-6">
            <div class="text-2xl mb-2">🕰️</div>
            <h3 class="text-lg sm:text-xl font-bold mb-2 text-white">Tiempo límite de confirmación cerrado</h3>
            <p class="text-sm sm:text-base text-white mb-2">
              Las confirmaciones cerraron el <%= l(@event.rsvp_deadline, format: :long) %>
            </p>
            <% unless @invitation.status == 'pending' %>
              <p class="text-sm text-white">
                Tu estado actual: <span class="font-bold">
                  <%= @invitation.status == 'accepted' ? 'Confirmado ✅' : 'Declinado ❌' %>
                </span>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <!-- Header con animación -->
    <div class="text-center mb-6 sm:mb-8 animate-fade-in">
      <div class="inline-flex items-center justify-center gap-2 mb-4">
        <div class="inline-block p-3 sm:p-4 bg-white rounded-full shadow-lg border-3 sm:border-4" style="border-color: #9f7aea;">
          <div class="bee-icon text-3xl sm:text-4xl">🌸</div>
        </div>
        <div class="inline-block p-3 sm:p-4 bg-white rounded-full shadow-lg border-3 sm:border-4 border-yellow-300">
          <div class="bee-icon text-3xl sm:text-4xl">🐝</div>
        </div>
        <div class="inline-block p-3 sm:p-4 bg-white rounded-full shadow-lg border-3 sm:border-4" style="border-color: #9f7aea;">
          <div class="bee-icon text-3xl sm:text-4xl">🌸</div>
        </div>
      </div>
      <h1 class="text-3xl sm:text-4xl font-bold mb-2 px-2" style="color: var(--bee-black); text-shadow: 2px 2px 4px rgba(255,193,7,0.3);">
        ¡Te invitamos a nuestro jardín! 🍯🌸
      </h1>
    </div>

    <!-- Indicador de Estado RSVP -->
    <div class="mb-6 mx-2 sm:mx-0" data-rsvp-target="statusIndicator">
      <% case @invitation.status %>
      <% when 'accepted' %>
        <div class="flex items-center justify-center p-4 rounded-xl border-2 rsvp-status-indicator rsvp-status-accepted">
          <div class="flex items-center gap-2">
            <span class="text-2xl animate-bounce">🐝</span>
            <div class="text-center">
              <p class="font-bold text-sm sm:text-base" style="color: var(--bee-black);">¡Ya confirmaste tu vuelo al jardín!</p>
              <p class="text-xs sm:text-sm" style="color: var(--bee-brown);">Tu asistencia está confirmada entre flores y miel 🍯🌸</p>
            </div>
            <span class="text-xl">✅</span>
          </div>
        </div>
      <% when 'declined' %>
        <div class="flex items-center justify-center p-4 rounded-xl border-2 rsvp-status-indicator rsvp-status-declined">
          <div class="flex items-center gap-2">
            <span class="text-2xl">👿</span>
            <div class="text-center">
              <p class="font-bold text-sm sm:text-base" style="color: var(--bee-brown);">Has declinado la invitación</p>
              <p class="text-xs sm:text-sm" style="color: var(--bee-brown);">Esperamos verte en el futuro 💜</p>
            </div>
            <span class="text-xl">💔</span>
          </div>
        </div>
      <% else %>
        <div class="flex items-center justify-center p-4 rounded-xl border-2 rsvp-status-indicator rsvp-status-pending">
          <div class="flex items-center gap-2">
            <span class="text-2xl bee-icon">🍯</span>
            <div class="text-center">
              <p class="font-bold text-sm sm:text-base" style="color: var(--bee-black);">Esperando tu confirmación</p>
              <p class="text-xs sm:text-sm" style="color: var(--bee-black);">¿Volarás hasta nuestro jardín? 🐝💜</p>
            </div>
            <span class="text-xl">⏳</span>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Tarjeta principal de invitación -->
    <div class="bee-card">
      <!-- Header de la tarjeta -->
      <div class="bee-card-header text-center">
        <h2 class="text-2xl sm:text-3xl font-bold mb-2 px-2"><%= @event.title %></h2>
        <p class="text-base sm:text-lg px-2">
          Querida abejita <span class="font-semibold"><%= @invitation.name %></span> 🐝
        </p>
      </div>

      <!-- Contenido de la tarjeta -->
      <div class="p-4 sm:p-6 lg:p-8">
        <!-- Descripción del evento -->
        <% if @event.description.present? %>
          <div class="mb-6 sm:mb-8 text-center">
            <p class="text-base sm:text-lg leading-relaxed px-2" style="color: var(--bee-brown);"><%= @event.description %></p>
            <div class="text-xl sm:text-2xl mt-2">🌸 🐝 💜 🐝 🌸</div>
          </div>
        <% end %>

        <!-- Detalles del evento -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6 mb-6 sm:mb-8">
          <!-- Fecha y Hora -->
          <div class="bee-detail-card">
            <div class="bee-icon-wrapper flex-shrink-0">
              <div class="bee-icon text-lg sm:text-xl">⏰</div>
            </div>
            <div class="min-w-0 flex-1">
              <h3 class="font-semibold text-sm sm:text-base" style="color: var(--bee-black);">Fecha y Hora del evento</h3>
              <p class="text-sm sm:text-base break-words" style="color: var(--bee-brown);">
                <%= format_date_spanish(@event.start_time) if @event.start_time %>
              </p>
              <p class="text-sm sm:text-base" style="color: var(--bee-brown);">
                <%= format_time_spanish(@event.start_time) if @event.start_time %>
                <% if @event.end_time %>
                  - <%= format_time_spanish(@event.end_time) %>
                <% end %>
              </p>
            </div>
          </div>

          <!-- Ubicación -->
          <% if @event.location.present? %>
            <div class="bee-detail-card">
              <div class="bee-icon-wrapper flex-shrink-0">
                <div class="bee-icon text-lg sm:text-xl">🌍</div>
              </div>
              <div class="min-w-0 flex-1">
                <h3 class="font-semibold text-sm sm:text-base" style="color: var(--bee-black);">Ubicación del Jardín</h3>
                <p class="text-sm sm:text-base break-words" style="color: var(--bee-brown);"><%= @event.location %></p>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Sección de Grupo Familiar -->
        <% if @invitation.family_group && @family_members.any? %>
          <div class="mb-6 sm:mb-8 p-4 sm:p-6 rounded-xl border-3 sm:border-4" style="background: linear-gradient(135deg, #E8F5E8 0%, #F0FFF0 100%); border-color: var(--bee-yellow);">
            <div class="text-center mb-4">
              <div class="text-2xl mb-2">👨‍👩‍👧‍👦</div>
              <h3 class="text-lg sm:text-xl font-semibold mb-2" style="color: var(--bee-black);">
                Grupo Familiar: <%= @invitation.family_group.name %>
              </h3>
              <p class="text-sm sm:text-base" style="color: var(--bee-brown);">
                ¡También puedes confirmar la asistencia de otros miembros de tu grupo familiar al jardín! 🐝🌸
              </p>
            </div>
            
            <div data-rsvp-target="familyMembersSection" class="space-y-3">
              <% @family_members.each do |member| %>
                <div class="flex items-center justify-between p-3 rounded-lg border-2 border-yellow-200 bg-white bg-opacity-60">
                  <div class="flex items-center flex-1">
                    <div class="mr-3">
                      <% if member.status == 'accepted' %>
                        <span class="text-lg">✅</span>
                      <% elsif member.status == 'declined' %>
                        <span class="text-lg">❌</span>
                      <% else %>
                        <span class="text-lg">⏳</span>
                      <% end %>
                    </div>
                    <div class="flex-1">
                      <p class="font-medium text-sm sm:text-base" style="color: var(--bee-black);"><%= member.name %></p>
                      <p class="text-xs sm:text-sm" style="color: var(--bee-brown);">
                        Estado actual: 
                        <span class="font-medium">
                          <%= member.status == 'accepted' ? 'Confirmado' : (member.status == 'declined' ? 'Declinado' : 'Pendiente') %>
                        </span>
                      </p>
                    </div>
                  </div>
                  <div class="flex items-center gap-2">
                    <% if member.hash_id.present? %>
                      <button 
                        type="button"
                        onclick="copyInvitationLink('<%= rsvp_confirm_url(hash_id: member.hash_id) %>', '<%= member.name %>')"
                        class="px-2 py-1 bg-blue-100 text-blue-700 rounded text-xs hover:bg-blue-200 transition-colors duration-200 flex items-center gap-1"
                        title="Copiar link de invitación de <%= member.name %>">
                        <span class="text-xs">🔗</span>
                        <span class="hidden sm:inline text-xs">Copiar Link</span>
                      </button>
                    <% end %>
                    <label class="flex items-center cursor-pointer">
                      <input 
                        type="checkbox" 
                        name="family_members[<%= member.id %>]" 
                        value="1"
                        data-rsvp-target="familyMemberCheckbox"
                        class="w-4 h-4 text-yellow-600 bg-gray-100 border-gray-300 rounded focus:ring-yellow-500 focus:ring-2"
                      >
                      <span class="ml-2 text-xs sm:text-sm font-medium" style="color: var(--bee-brown);">Incluir</span>
                    </label>
                  </div>
                </div>
              <% end %>
              
              <div class="text-center pt-2">
                <p class="text-xs text-gray-600">
                  💡 Marca las casillas de los familiares que quieres confirmar junto contigo
                </p>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Mensaje personalizado -->
        <div class="text-center mb-6 sm:mb-8 p-4 sm:p-6 rounded-xl border-3 sm:border-4" style="background: linear-gradient(135deg, #f3e8ff 0%, #e9d5ff 100%); border-color: #9f7aea;">
          <h3 class="text-lg sm:text-xl font-semibold mb-2 px-2" style="color: var(--bee-black);">
            Tu presencia es tan valiosa como el néctar de las flores lilas
          </h3>
          <p class="text-sm sm:text-base px-2" style="color: var(--bee-brown);">
            Esperamos que vueles hasta nosotros para compartir este momento especial entre pétalos lilas y miel dorada, <%= @invitation.name %>. 
            Por favor confirma tu asistencia para que podamos preparar el jardín perfectamente. 🍯🌸
          </p>
          <div class="text-xl sm:text-2xl mt-3">🌸 🐝 💜 🐝 🌸</div>
        </div>

        <!-- Botones de confirmación -->
        <% if rsvp_deadline_active?(@event) %>
          <div data-rsvp-target="confirmationSection">
            <div class="flex flex-col gap-3 sm:gap-4 max-w-md mx-auto">
              <button 
                data-action="click->rsvp#accept"
                data-rsvp-target="acceptButton"
                class="bee-button bee-button-accept">
                <span class="bee-icon text-lg">🌸</span>
                <span class="flex-1">¡Sí, volaré al jardín!</span>
                <span class="bee-icon text-lg">🐝</span>
              </button>
              
              <button 
                data-action="click->rsvp#decline"
                data-rsvp-target="declineButton"
                class="bee-button bee-button-decline">
                <span class="text-lg">👿</span>
                <span class="flex-1">No podré volar esta vez</span>
                <span class="text-lg">💔</span>
              </button>
            </div>
          </div>
        <% else %>
          <div class="text-center p-4 sm:p-6 rounded-xl border-3 sm:border-4" style="background: linear-gradient(135deg, #F5F5F5 0%, #E0E0E0 100%); border-color: #CCCCCC;">
            <div class="text-2xl mb-2">🔒</div>
            <h3 class="text-lg sm:text-xl font-semibold mb-2" style="color: #666;">
              Confirmaciones cerradas
            </h3>
            <p class="text-sm sm:text-base" style="color: #888;">
              El tiempo para confirmar tu asistencia ha terminado.
              <% if @invitation.status != 'pending' %>
                <br>Tu estado actual se mantiene como: 
                <span class="font-bold">
                  <%= @invitation.status == 'accepted' ? 'Confirmado ✅' : 'Declinado ❌' %>
                </span>
              <% end %>
            </p>
          </div>
        <% end %>

        <!-- Sección de respuesta (oculta inicialmente) -->
        <div data-rsvp-target="responseSection" class="hidden">
          <!-- El contenido se llenará dinámicamente con los partials -->
        </div>
      </div>
    </div>

    <!-- Footer -->
    <div class="text-center px-4 pb-4" style="color: var(--bee-brown);">
      <p class="text-xs sm:text-sm">
        Si tienes alguna pregunta, no dudes en zumbar hasta nosotros. 🐝💜
      </p>
      <p class="text-xs mt-2">
        Miniplan • Creando momentos dulces como la miel entre pétalos lilas 🍯🌸
      </p>
    </div>
  </div>
</div>

<!-- Script para copiar links -->
<script>
function copyInvitationLink(url, memberName) {
  navigator.clipboard.writeText(url).then(function() {
    showNotification(`Link de ${memberName} copiado al portapapeles 🐝`, 'success');
  }).catch(function(err) {
    // Fallback para navegadores que no soportan clipboard API
    fallbackCopyToClipboard(url);
    showNotification(`Link de ${memberName} copiado 🐝`, 'success');
  });
}

function fallbackCopyToClipboard(text) {
  const textArea = document.createElement('textarea');
  textArea.value = text;
  document.body.appendChild(textArea);
  textArea.select();
  document.execCommand('copy');
  document.body.removeChild(textArea);
}

function showNotification(message, type = 'success') {
  const notification = document.createElement('div');
  
  // Usar estilos inline para asegurar que se vean correctamente
  if (type === 'success') {
    notification.style.cssText = `
      position: fixed;
      top: 1rem;
      right: 1rem;
      background-color: #10b981;
      color: white;
      padding: 0.75rem 1rem;
      border-radius: 0.5rem;
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      z-index: 9999;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      max-width: 20rem;
      font-size: 0.875rem;
      border: 2px solid #059669;
    `;
  } else {
    notification.style.cssText = `
      position: fixed;
      top: 1rem;
      right: 1rem;
      background-color: #ef4444;
      color: white;
      padding: 0.75rem 1rem;
      border-radius: 0.5rem;
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      z-index: 9999;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      max-width: 20rem;
      font-size: 0.875rem;
      border: 2px solid #dc2626;
    `;
  }
  
  const icon = type === 'success' ? '✅' : '❌';
  notification.innerHTML = `
    <span style="font-size: 1.125rem;">${icon}</span>
    <span>${message}</span>
  `;
  
  document.body.appendChild(notification);
  
  // Remover notificación después de 4 segundos
  setTimeout(() => {
    notification.remove();
  }, 4000);
}

// Countdown Timer
document.addEventListener('DOMContentLoaded', function() {
  const countdownElement = document.getElementById('countdown-timer');
  if (countdownElement) {
    const deadline = parseInt(countdownElement.dataset.deadline);
    
    function updateCountdown() {
      const now = Date.now();
      const timeLeft = deadline - now;
      
      if (timeLeft <= 0) {
        countdownElement.innerHTML = '⏰ ¡Tiempo agotado!';
        // Opcional: recargar la página para mostrar el estado "cerrado"
        setTimeout(() => {
          location.reload();
        }, 2000);
        return;
      }
      
      const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
      const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);
      
      let countdownText = '';
      
      if (days > 0) {
        countdownText = `${days}d ${hours}h ${minutes}m ${seconds}s`;
      } else if (hours > 0) {
        countdownText = `${hours}h ${minutes}m ${seconds}s`;
      } else if (minutes > 0) {
        countdownText = `${minutes}m ${seconds}s`;
      } else {
        countdownText = `${seconds}s`;
      }
      
      countdownElement.innerHTML = `⏰ ${countdownText}`;
    }
    
    // Actualizar inmediatamente y luego cada segundo
    updateCountdown();
    const countdownInterval = setInterval(updateCountdown, 1000);
    
    // Limpiar el intervalo cuando se desmonte la página
    window.addEventListener('beforeunload', () => {
      clearInterval(countdownInterval);
    });
  }
});
</script>
